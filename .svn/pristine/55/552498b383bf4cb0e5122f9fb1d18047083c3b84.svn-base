// base color
$blue:#324157;
$light-blue:#3A71A8;
$red:#C03639;
$pink: #E65D6E;
$green: #30B08F;
$tiffany: #4AB7BD;
$yellow:#FEC171;
$panGreen: #30B08F;

// tagView
$tagBg: #EEEEEE;
$tagActiveBg: #1264BC;

// sidebar
// sidebar菜单颜色
$menuActiveBg: #1264BC; // https://github.com/ElemeFE/element/issues/12951
$menuHover:#fcead8;
//菜单字体颜色
$menuText:#31455F;
//选中菜单字体颜色
$menuActiveText: #1264BC;
//选择的父菜单高亮
$subMenuActiveText: #ffffff; // https://github.com/ElemeFE/element/issues/12951
//菜单的背景色
$menuBg:#FFFFFF;

$subMenuBg:#F3F2F2;
$subMenuHover: #fff;
//菜单的宽度
$sideBarWidth: 208px;
$containerBg:#F3F2F2;
$menuTextHoverColor: #1264BC;
//顶部的背景颜色
$top-bg:#67493B;
$topTextColor: #fff;
$tabTextColor: #fff;
$tabBg: #4A342A;
$tabActiveColor:#1264BC;
$searchInputBg:#805F4F;
$queryBg:#FAFAFA;
// the :export directive is the magic sauce for webpack
// https://www.bluematador.com/blog/how-to-share-variables-between-js-and-sass
:export {
  menuText: $menuText;
  menuActiveText: $menuActiveText;
  subMenuActiveText: $subMenuActiveText;
  menuBg: $menuBg;
  menuHover: $menuHover;
  subMenuBg: $subMenuBg;
  subMenuHover: $subMenuHover;
  sideBarWidth: $sideBarWidth;
  containerBg:$containerBg;
  menuTextHoverColor:$menuTextHoverColor;
  top-bg:$top-bg;
  topTextColor:$topTextColor;
  tabTextColor:$tabTextColor;
  tabBg:$tabBg;
  tabActiveColor:$tabActiveColor;
  searchInputBg:$searchInputBg;
  queryBg:$queryBg
}
